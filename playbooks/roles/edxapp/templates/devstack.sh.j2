#!/usr/bin/env bash

# {{ ansible_managed }}

source {{ edxapp_app_dir }}/edxapp_env
COMMAND=$1

case $COMMAND in
    start)
        /edx/app/supervisor/venvs/supervisor/bin/supervisord -n --configuration /edx/app/supervisor/supervisord.conf
        ;;
    open)
        . {{ edxapp_venv_bin }}/activate
        cd {{ code_dirs[service_variants_enabled[0]] }}

        /bin/bash
        ;;
    exec)
        shift

        . {{ edxapp_venv_bin }}/activate
        cd {{ code_dirs[service_variants_enabled[0]] }}

        "$@"
        ;;
    *)
        "$@"
        ;;
esac
